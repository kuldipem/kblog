jQuery(document).ready(function(a){a(".switcher").css("left","-225px");a(".switcher-trigger").click(function(){if(a(".switcher").hasClass("closeswitcher")){a(".switcher").animate({left:"-225px"},500,function(){a(".switcher").removeClass("closeswitcher")})}else{a(".switcher").animate({left:0},500,function(){a(".switcher").addClass("closeswitcher")})}return false});a("#switcher-option-layout").change(function(){var b=a(this).val();if(b=="layout-boxed"){a("body").removeClass("stretched")}else{if(b=="layout-full"){a("body").addClass("stretched")}}a(window).resize()});a("#switcher-option-color li").click(function(){var c=a(this).attr("data-color");var b=a("#switcher-option-layout").val();a("#swcolors-Css").remove();a("head").append('<link id="swcolors-Css" rel="stylesheet" href="css/colors.php?color='+c+'" type="text/css" />')});a("#switcher-option-pattern li").click(function(){var c=a(this).attr("data-url");var b=a("#switcher-option-layout").val();if(b=="layout-full"){alert("Please select Boxed Layout to Preview Patterns.")}else{a("body").css("background-image",'url("'+c+'")');a("body").css("background-size","auto auto");a("body").css("background-position","0% 0%");a("body").css("background-repeat","repeat repeat")}});a("#switcher-option-bgimage li").click(function(){var b=a(this).attr("data-url");var c=a("#switcher-option-layout").val();if(c=="layout-full"){alert("Please select Boxed Layout to Preview Background Images.")}else{a("body").css("background-image",'url("'+b+'")');a("body").css("background-attachment","fixed");a("body").css("background-size","cover");a("body").css("background-position","50% 50%");a("body").css("background-repeat","no-repeat no-repeat")}});a("#switcher-option-footer a").click(function(){var b=a(this).attr("data-color");a("#switcher-option-footer a").removeClass("swfooter-active");if(b=="light"){a("#footer").removeClass("footer-dark");a("#copyrights").removeClass("copyrights-dark");a(this).addClass("swfooter-active")}else{if(b=="dark"){a("#footer").addClass("footer-dark");a("#copyrights").addClass("copyrights-dark");a(this).addClass("swfooter-active")}}return false})});